<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @game.name %>
</p>

<p>
  <b>Gm:</b>
  <%= @game.GM %>
</p>

<% title "Chat" %>

<ul id="chat">
	<%= render @messages %>
</ul>

<%=form_for Message.new, :remote => true do |f| %>
	<%= f.text_field :content %>
	<%= f.submit "Send" %>
<% end %>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
