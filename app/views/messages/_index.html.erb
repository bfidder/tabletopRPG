<h1>Chat</h1>

<table id="chat">
	<% if not @messages.nil? %>
		<%= @messages.each do |m| %>
			<tr>
				<td><% m.name %></td>
				<td><% m.content %></td>
				<td><% m.created_at %></td>
			</tr>
		<% end %>
	<% end %>
</table>

<%=form_for Message.new, :remote => true do |f| %>
	<%= f.text_field :content %>
	<%= f.submit "Send" %>
<% end %>
